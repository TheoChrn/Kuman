{
  "extends": "@kuman/tsconfig/internal-package.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/components/reading-mode/scroll.tsx",
    "src/routes/_navigationLayout/_protectedLayout/$serieSlug/chapter.$chapterNumber.$page.tsx"
  ],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "noEmit": true
  }
}
