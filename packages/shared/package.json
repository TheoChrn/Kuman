{
  "name": "@kuman/shared",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    "./validators": {
      "types": "./dist/validators.d.ts",
      "default": "./src/validators.ts"
    },
    "./format": {
      "types": "./dist/format.d.ts",
      "default": "./src/format.ts"
    },
    "./generate-ids": {
      "types": "./dist/generate-ids.d.ts",
      "default": "./src/generate-ids.ts"
    },
    "./env": {
      "types": "./dist/env.d.ts",
      "default": "./src/env.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache dist node_modules",
    "dev": "tsc --watch",
    "format": "pnpm --filter @kuman/prettier-config run format",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "devDependencies": {
    "@kuman/db": "workspace:*",
    "@kuman/eslint-config": "workspace:*",
    "@kuman/prettier-config": "workspace:*",
    "@kuman/tsconfig": "workspace:*",
    "@types/node": "^22.15.30",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@kuman/prettier-config",
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}
