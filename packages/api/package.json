{
  "name": "@kuman/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./root": {
      "types": "./dist/root.d.ts",
      "default": "./src/root.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@kuman/db": "workspace:*",
    "@lucia-auth/adapter-drizzle": "catalog:",
    "@trpc/client": "catalog:",
    "@trpc/server": "catalog:",
    "argon2": "^0.43.1",
    "dotenv": "^17.0.1",
    "lucia": "catalog:",
    "stripe": "^18.4.0",
    "superjson": "^2.2.2"
  },
  "devDependencies": {
    "@kuman/eslint-config": "workspace:*",
    "@kuman/prettier-config": "workspace:*",
    "@kuman/tsconfig": "workspace:*",
    "@types/node": "^22.15.30",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@kuman/prettier-config"
}
